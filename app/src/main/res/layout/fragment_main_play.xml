<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Mode"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <GridLayout
        android:id="@+id/playModeGridLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="4"
        android:orientation="horizontal"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_columnSpan="1"
            android:text="A"
            android:layout_column="0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center" />

        <Button

            android:id="@+id/button2"
            android:layout_row="0"
            android:layout_columnSpan="1"
            android:text="B"
            android:layout_column="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button3"
            android:layout_row="0"
            android:layout_columnSpan="1"
            android:text="C"
            android:layout_column="2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button4"
            android:layout_row="0"
            android:layout_columnSpan="1"
            android:text="D"
            android:layout_column="3"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center" />


        <Button

            android:id="@+id/button5"
            android:layout_row="1"
            android:layout_columnSpan="1"
            android:text="D"
            android:layout_column="0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button6"
            android:layout_row="1"
            android:layout_columnSpan="1"
            android:text="E"
            android:layout_column="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button7"
            android:layout_row="1"
            android:layout_columnSpan="1"
            android:text="F"
            android:layout_column="2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button8"
            android:layout_row="1"
            android:layout_columnSpan="1"
            android:text="F"
            android:layout_column="3"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="1"

            android:gravity="center_vertical|center_horizontal"
            android:text="G"
            android:textAlignment="center"
            android:textSize="65sp"
            android:textStyle="bold" />

        <Button

            android:id="@+id/button10"
            android:layout_row="2"
            android:layout_columnSpan="1"
            android:text="H"
            android:layout_column="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button11"
            android:layout_row="2"
            android:layout_columnSpan="1"
            android:text="I"
            android:layout_column="2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />
        <Button

            android:id="@+id/button12"
            android:layout_row="2"
            android:layout_columnSpan="1"
            android:text="I"
            android:layout_column="3"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button13"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:text="G"
            android:layout_column="0"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button14"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:text="G"
            android:layout_column="1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button15"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:text="G"
            android:layout_column="2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

        <Button

            android:id="@+id/button16"
            android:layout_columnSpan="1"
            android:layout_row="3"
            android:text="G"
            android:layout_column="3"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="65sp"
            android:gravity="center_vertical|center_horizontal" />

    </GridLayout>

    <EditText
        android:id="@+id/userEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Swipe over letters to form a word!"
        app:layout_constraintTop_toBottomOf="@id/playModeGridLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="51dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        app:layout_constraintTop_toBottomOf="@id/userEditText"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        app:layout_constraintTop_toBottomOf="@id/userEditText"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

